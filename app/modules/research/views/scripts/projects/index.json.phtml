<?php


$paginator = $this->projects;
$meta = array(
    'currentPage' => $paginator->getCurrentPageNumber(),
    'totalResults' => $paginator->getTotalItemCount(),
    'resultsPerPage' => $paginator->getItemCountPerPage(),
    'totalPages' => $paginator->getPageRange()
        );
$projects = array();
foreach($this->projects as $project){
    $projects[] = $project;
}
echo Zend_Json::prettyPrint(Zend_Json::encode(( array('meta' => $meta, 'projects' => $projects))));